                                        </tr>
                                    </table>
                                     
                                    <center>
                                        <table summary="Contenedor Botones"
                                               class="tablaAnchoAjustable">
                                            <tr>
                                                <td>
                                                    <ul class="enlacesCentroAjustables">
                                                        <li><input type="button" onclick="javascript:regresar();" class="boton" value="Regresar"></li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        </table>
                                    </center>                                    
                                    </form:form>
                                    
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
