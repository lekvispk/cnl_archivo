<%@ taglib prefix="form" uri="http://www.springframework.org/tags/form" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"  %>

	<jsp:include page="../includes/head.jsp"/>
    	<script>
			function regresar(){
			    document.forms[0].action = "listaEnt.htm";
			    document.forms[0].submit();
			}
		</script>
		
            <div id="contenedor">
                <!--Capa que contiene toda la plantilla-->
                <jsp:include page="../includes/cabecera.jsp" flush="true"/>
                 
                <div id="cuerpo" align="center">
                    <table class="anchoTotal" align="center" width="90%" border="1">
                        <tr>
                            <td id="anchoMenu" >
                                <jsp:include page="../includes/menu2.jsp" flush="true"/>
                            </td>
                            <td id="anchoCuerpo">
                                <div id="contenido">
                                    <!--Capa que contiene el cuerpo de la plantilla-->                                     
                                    <h2>REGISTRO DE ENTIDADES</h2>
                                    <h3> <span>DATOS DE ENTIDAD</span> </h3>
                                    
                                   <form:form action="." name="frm1" method="post" modelAttribute="entidad">
                                                                     
                                    <table class="bloqueTablaLineal" cellspacing="6">
                                         <tr>
                                            <th>Nombre:</th>
                                            <td>${entidad.nomEntidad}</td>
                                        </tr>
                                        <tr>
                                            <th>Tipo:</th>
                                            <td>
                                            	<c:if test="${entidad.tipo == 1}">Notar&iacute;a</c:if>
		                                    	<c:if test="${entidad.tipo == 2}">Entidad</c:if>
		                                    	<c:if test="${entidad.tipo == 3}">CNL</c:if>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Direccion:</th>
                                            <td>${entidad.dirEntidad}</td>
